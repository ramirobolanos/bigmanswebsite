---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey,</div>
    <div class="text-5xl font-bold">I'm Ramiro</div>
    <div class="text-3xl py-3 font-bold">A Mechanical & Electrical Engineer </div>
    <div class="py-2">
      <text class="text-lg">
        I <b>excel</b> in tackling challenging projects, leveraging my innovative problem-solving skills. My curiosity in mechanical and electrical systems propels
         me to pursue excellence in my work, and I consistently apply a unique, creative approach to every task at hand.
        
      </text>
  
    <!-- 
    <div class="mt-8">
      <a class="btn" href="https://twitter.com/manuelernestog" target="_blank"> Let's connect!</a>
      <a href="https://github.com/manuelernestog/astrofy" target="_blank" class="btn btn-outline ml-5">
        Get This template
      </a>
    </div>
  </div>
    -->

  <div>
    <br>
    <div class="text-3xl w-full font-bold mb-2">My lastest projects</div>
  </div>

  <HorizontalCard
    title="Electric Stand Up Paddle Board"
    img="/Paddle Board.png"
    desc="Introducing the next innovation in electric paddleboard technology, an electric paddleboard conversion kit aimed at safety and performance. With most designs on the market taking one of two approaches, a sleek design with low battery life, or a bulky design which would be cumbersome to avoid on the board, this project aims to bridge the gap between the two with a sleek battery pack designed to slide seamlessly into a carrying bag. This project features a motor, impeller,  removable fin, rudder, and a discreet low-profile battery, with user control for speed and steering."
    url="#"
    badge={['IN PROGRESS! ']}
    
  />
  <div class="divider my-0"></div>
 
  <HorizontalCard
    title="Custom Macro Key Pad"
    img="/Macro.png"
    desc="Custom-built Macro Pad for WFH Dad. Tuned for Zoom, Slack, and Excel shortcuts, as well as media control. Complete with underglow and machined anodized aluminum housing and USB-C interface."
    url="#"
    badge={['IN PROGRESS! ', 'Personal Project']}
  />
  <div class="divider my-0"></div>

  <HorizontalCard
    title="Automatic Poker Dealer"
    img="/PDR.png"
    desc="The Automatic Poker Dealer, designed to replace human dealers in home and tournament poker games, efficiently handles card distribution. Using DC motors and a stepper motor, the machine successfully ejects and removes cards, while the Flipper and Elevator subsystems ensure precise card orientation."
    url="#"
  
  />
  <div class="divider my-0"></div>
